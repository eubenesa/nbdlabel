<div class="container">
  {{nbd-header}}

  <div class="page-content">
    <section class="releases">
      {{#each model as |release|}}
        <div class="row release u-cf">
          <div class="one-half column release-image-container">
            <img src={{release.imgUrl}} alt={{release.artist}}>
          </div>
          <div class="one-half column release-description">
            <p class="release-id">nbd00{{release.id}}</p>
            <p class="release-artist-album-format">{{release.artist}} "{{release.album}}" {{release.format}}</p>
            <p class="release-date">released {{moment-format release.releasedAt 'MMMM DD YYYY'}}</p>
            <p>{{release.blurbP1}}</p>
            {{#if release.blurbP2}}
              <p>{{release.blurbP2}}</p>
            {{/if}}
            {{#if release.blurbP3}}
              <p>{{release.blurbP3}}</p>
            {{/if}}
            <nav>
              {{#if release.bandcampUrl}}
                <a href={{release.bandcampUrl}} target="_blank">
                  {{fa-icon icon="play"}}
                </a>
              {{/if}}
              {{#if release.itunesUrl}}
                <a href={{release.itunesUrl}} target="_blank">
                  {{fa-icon icon="apple"}}
                </a>
              {{/if}}
              {{#if release.spotifyUrl}}
                <a href={{release.spotifyUrl}} target="_blank">
                  {{fa-icon icon="spotify"}}
                </a>
              {{/if}}
            </nav>
          </div>
        </div>
      {{/each}}
    </section>
  </div>
</div>
