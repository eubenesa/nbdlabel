<div class="container">
  {{nbd-header}}

  <div class="row page-content">
    <div class="twelve columns">
      <section class="releases">
        {{#each model as |release|}}
          <div class="release">
            <div class="six columns release-image-container">
              <img src={{release.imgUrl}} alt={{release.artist}}>
            </div>
            <div class="six columns release-description">
              <p class="release-id">nbd00{{release.id}}</p>
              <p class="release-artist-album-format">{{release.artist}} "{{release.album}}" {{release.format}}</p>
              <p class="release-date">released {{moment-format release.releasedAt 'MMMM DD YYYY'}}</p>
              <p>{{release.blurbP1}}</p>
              <p>{{release.blurbP2}}</p>
              <p>{{release.blurbP3}}</p>
              <nav>
                {{#if release.bcUrl}}
                  <a href={{release.bcUrl}} target="_blank">
                    {{fa-icon icon="play"}}
                  </a>
                {{/if}}
                {{#if release.itUrl}}
                  <a href={{release.itUrl}} target="_blank">
                    {{fa-icon icon="apple"}}
                  </a>
                {{/if}}
                {{#if release.sfUrl}}
                  <a href={{release.itUrl}} target="_blank">
                    {{fa-icon icon="spotify"}}
                  </a>
                {{/if}}
              </nav>
            </div>
          </div>
        {{/each}}
      </section>
    </div>
  </div>
</div>
