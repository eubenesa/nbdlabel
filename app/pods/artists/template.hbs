<div class="container">
  {{nbd-header}}

  <div class="row page-content">
    <section class="artists">
      {{#each model as |artist|}}
        <div class="one-half column artist">
          <img src={{artist.imgUrl}} alt={{artist.name}}>
          {{#if artist.photoBy}}
            {{#if artist.photoByUrl}}
              <p class="photo-credit">{{fa-icon "camera-retro"}} by <a href={{artist.photoByUrl}} target="_blank">{{artist.photoBy}}</a></p>
            {{else}}
              <p class="photo-credit">{{fa-icon "camera-retro"}} by {{artist.photoBy}}</p>
            {{/if}}
          {{/if}}
          <div class="twelve columns artist-name-blurb-social">
            <p>{{artist.name}}</p>
            <p class="artist-blurb">{{artist.blurb}}</p>
            <nav>
              {{#if artist.scUrl}}
                <a href={{artist.scUrl}} target="_blank">
                  {{fa-icon "soundcloud"}}
                </a>
              {{/if}}
              {{#if artist.instaUrl}}
                <a href={{artist.instaUrl}} target="_blank">
                  {{fa-icon "instagram"}}
                </a>
              {{/if}}
              {{#if artist.fbUrl}}
                <a href={{artist.fbUrl}} target="_blank">
                  {{fa-icon "facebook"}}
                </a>
              {{/if}}
              {{#if artist.twUrl}}
                <a href={{artist.twUrl}} target="_blank">
                  {{fa-icon "twitter"}}
                </a>
              {{/if}}
            </nav>
          </div>
        </div>
      {{/each}}
    </section>
  </div>
</div>
